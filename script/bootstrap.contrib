#!/bin/bash

set -e

cd $(dirname "$0")/..

bundle install --path vendor/bundle
python2 -m virtualenv vendor/python && source vendor/python/bin/activate
python2 -m pip install docutils

echo ""
echo "*** DONE ***"
echo ""
echo "activate python environment with 'source vendor/python/bin/activate'"
echo "run tests with 'bundle exec rake'"
